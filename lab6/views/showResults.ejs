<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Survey Results - Chess.com</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        .survey-results {
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 5px;
            margin-bottom: 20px;
        }
        .survey-results h2 {
            margin-bottom: 15px;
        }
        .survey-result-item {
            background-color: #fff;
            border: 1px solid #ddd;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 10px;
        }
        .survey-result-item p {
            margin: 0;
        }
        .category-title {
            text-transform: capitalize;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Chess.com UI Analysis Survey Results</h1>
        <div class="survey-results">
            <% Object.entries(results).forEach(([category, answers]) => { %>
                <div class="survey-result-item">
                    <h2 class="category-title"><%= category.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase()) %></h2>
                    <% if (typeof answers === 'object' && answers !== null) { %>
                        <% Object.entries(answers).forEach(([answer, count]) => { %>
                            <p><%= answer %>: <%= count %> votes</p>
                        <% }) %>
                    <% } else { %>
                        <p><%= answers %></p>
                    <% } %>
                </div>
            <% }) %>
        </div>
        <div class="mt-4">
            <a href="/chessSurvey" class="btn btn-primary">Back to Survey</a>
            <a href="https://www.chess.com/" class="btn btn-secondary" rel="noopener noreferrer">Visit Chess.com</a>
        </div>
    </div>
</body>
</html>
